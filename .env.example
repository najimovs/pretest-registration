# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ielts-registration

# Server Configuration
PORT=8000
NODE_ENV=development

# JWT Configuration - IMPORTANT: Generate a strong secret key for production!
# Use this command to generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-this-super-secret-jwt-key-in-production-minimum-32-chars

# Admin Credentials - IMPORTANT: Change these in production!
# Generate hash: node -e "const bcrypt=require('bcryptjs');bcrypt.hash('your-password',12).then(console.log)"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$12$changeThisHashedPasswordInProduction

# Click Payment Configuration - Get these from Click merchant dashboard
CLICK_SERVICE_ID=your_service_id_here
CLICK_MERCHANT_ID=your_merchant_id_here
CLICK_SECRET_KEY=your_secret_key_from_click_here
CLICK_MERCHANT_USER_ID=your_merchant_user_id_here

# Application Configuration
DOMAIN=localhost
TEST_AMOUNT=2000

# CORS Configuration - Update for production
FRONTEND_URL=http://localhost:5173
ADMIN_PANEL_URL=https://admin.pretest-uzbekistan.uz

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Click IP Whitelist (comma separated) - Get from Click documentation
CLICK_ALLOWED_IPS=185.8.212.184,185.8.212.185,185.8.212.186

